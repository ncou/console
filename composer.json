{
    "name": "chiron/console",
    "description": "Basic console implementation based on Symfony Console.",
    "keywords": ["console", "symfony", "chiron", "framework", "application"],
    "homepage": "https://github.com/ncou/console",
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Chiron\\Console\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chiron\\Console\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1",
        "chiron/injector": "^0.2",
        "symfony/console": "^5.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12",
        "phpunit/phpunit": "^7.3",
        "chiron/coding-standard": "^2.2"
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs",
            "@phpstan"
        ],
        "phpunit": "phpunit --colors=always",
        "phpcs": "phpcs src",
        "phpcs-fix": "phpcbf src",
        "phpstan": "phpstan analyse src --level=max",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    },
    "extra": {
        "chiron": {
            "bootloaders": [
                "Chiron\\Console\\Bootloader\\PublishConsoleBootloader",
                "Chiron\\Console\\Bootloader\\ConsoleBootloader",
                "Chiron\\Console\\Bootloader\\ConsoleDispatcherBootloader"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
